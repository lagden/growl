{
  "name": "lagden-growl",
  "version": "2.1.1",
  "description": "Plugin to show notification like Growl",
  "keywords": [
    "growl",
    "notification"
  ],
  "bug": {
    "url": "https://github.com/lagden/growl/issues",
    "email": "lagden@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Thiago Lagden",
    "email": "lagden@gmail.com",
    "url": "http://lagden.in"
  },
  "main": "dist/growl.js",
  "jsnext:main": "src/index.js",
  "repository": "lagden/growl",
  "scripts": {
    "stylus": "stylus src/growl.styl -o dist",
    "postcss": "postcss -u autoprefixer -d dist dist/*.css",
    "style": "npm run stylus && npm run postcss",
    "rm": "rm -rf dist",
    "rollup": "npm run rm && BABEL_ENV=rollup rollup -c",
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "xo",
    "test": "BABEL_ENV=ava nyc ava",
    "gzip": "find ./dist -name '*.js' -type f -exec sh -c 'gzip -c --best {} > {}.gz' \\;",
    "build": "npm test && npm run rollup && npm run gzip && npm run style"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "dependencies": {
    "lagden-utils": "3.0.3"
  },
  "devDependencies": {
    "autoprefixer": "6.4.1",
    "ava": "0.16.0",
    "coveralls": "2.11.12",
    "jsdom": "9.5.0",
    "nyc": "8.1.0",
    "postcss-cli": "2.6.0",
    "rollup": "0.35.9",
    "rollup-plugin-buble": "0.13.0",
    "rollup-plugin-node-resolve": "2.0.0",
    "simulant": "0.2.2",
    "stylus": "0.54.5",
    "xo": "0.16.0"
  },
  "xo": {
    "ignore": [
      "dist/*.js"
    ],
    "envs": [
      "es6"
    ],
    "esnext": true,
    "global": [
      "window",
      "document",
      "HTMLElement"
    ]
  },
  "babel": {
    "env": {
      "rollup": {
        "presets": [
          "es2015-rollup"
        ]
      },
      "ava": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "ava": {
    "files": [
      "test/index.js"
    ],
    "concurrency": 1,
    "timeout": "10s",
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "files": [
    "src",
    "dist",
    "LICENSE",
    "README.md"
  ]
}

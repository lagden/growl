{
  "name": "lagden-growl",
  "version": "3.0.1",
  "description": "Show notification like Growl",
  "keywords": [
    "growl",
    "notification",
    "plugin"
  ],
  "bug": {
    "url": "https://github.com/lagden/growl/issues",
    "email": "lagden@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Thiago Lagden",
    "email": "lagden@gmail.com",
    "url": "http://lagden.in"
  },
  "main": "dist/growl.js",
  "jsnext:main": "src/index.js",
  "repository": "lagden/growl",
  "scripts": {
    "stylus": "stylus src/growl.styl -o dist",
    "postcss": "postcss -d dist dist/*.css",
    "style": "npm run stylus && npm run postcss",
    "rm": "rm -rf dist",
    "rollup": "BABEL_ENV=rollup rollup -c",
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "gzip": "find ./dist -name '*.js' -type f -exec sh -c 'gzip -c --best {} > {}.gz' \\;",
    "pretest": "xo",
    "test": "BABEL_ENV=ava nyc ava",
    "prebuild": "npm run rm && npm test",
    "build": "npm run rollup && npm run style && npm run gzip"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "lagden-utils": "3.0.3"
  },
  "devDependencies": {
    "autoprefixer": "6.7.7",
    "ava": "0.18.2",
    "babel-preset-es2015": "6.24.0",
    "babel-preset-es2015-rollup": "3.0.0",
    "coveralls": "2.12.0",
    "jsdom": "9.12.0",
    "nyc": "10.1.2",
    "postcss-cli": "3.0.0",
    "rollup": "0.41.6",
    "rollup-plugin-buble": "0.15.0",
    "rollup-plugin-node-resolve": "2.0.0",
    "simulant": "0.2.2",
    "stylus": "0.54.5",
    "xo": "0.18.0"
  },
  "xo": {
    "semicolon": false,
    "ignore": [
      "dist/*.js"
    ],
    "envs": [
      "es6"
    ],
    "esnext": true,
    "global": [
      "window",
      "document",
      "HTMLElement"
    ],
    "rules": {
      "capitalized-comments": 0
    }
  },
  "babel": {
    "env": {
      "rollup": {
        "presets": [
          "es2015-rollup"
        ]
      },
      "ava": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "ava": {
    "files": [
      "test/index.js"
    ],
    "concurrency": 1,
    "timeout": "10s",
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "files": [
    "src",
    "dist",
    "LICENSE",
    "README.md"
  ]
}

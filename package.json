{
  "name": "lagden-growl",
  "version": "0.4.0",
  "description": "Plugin to show notification like Growl",
  "repository": "lagden/growl",
  "author": {
    "name": "Thiago Lagden",
    "email": "lagden@gmail.com"
  },
  "main": "dev/index.html",
  "engines": {
    "node": ">=0.12.0"
  },
  "scripts": {
    "pretest": "grunt build",
    "test": "grunt test",
    "start": "grunt serve",
    "prepublish": "grunt test"
  },
  "xo": {
    "envs": [
      "node"
    ],
    "esnext": true,
    "ignores": [
      "es6/lib/**"
    ],
    "global": [
      "window"
    ],
    "rules": {
      "arrow-parens": [
        1,
        "always"
      ],
      "new-cap": [
        2,
        {
          "newIsCap": true,
          "capIsNew": false
        }
      ]
    }
  },
  "devDependencies": {
    "almond": "^0.3.1",
    "autoprefixer-core": "^5.2.1",
    "grunt": "^0.4.5",
    "grunt-babel": "^5.0.0",
    "grunt-browser-sync": "^2.1.3",
    "grunt-concurrent": "^1.0.0",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-coffee": "^0.13.0",
    "grunt-contrib-copy": "^0.8.0",
    "grunt-contrib-cssmin": "^0.12.3",
    "grunt-contrib-jade": "^0.14.1",
    "grunt-contrib-qunit": "^0.7.0",
    "grunt-contrib-requirejs": "^0.4.4",
    "grunt-contrib-stylus": "^0.21.0",
    "grunt-contrib-symlink": "^0.3.0",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-postcss": "^0.6.0",
    "grunt-xo": "^0.4.0",
    "jit-grunt": "^0.9.1",
    "requirejs": "^2.1.18",
    "time-grunt": "^1.2.0"
  }
}
